<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/ic_launcher_background"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/skip_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:onClick="skip"
        android:text="Skip >>>"
        android:textSize="15dp"
        android:fontFamily="@font/baloo_bhai"
        android:textColor="@color/blue" />

    <ImageView
        android:id="@+id/LogoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/plumber" />

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="282dp"
        android:layout_height="88dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="@string/WelcomeTextLoginScreen"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:lineSpacingExtra="-20dp"/>

    <TextView
        android:id="@+id/SignInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="left"
        android:fontFamily="@font/baloo_bhai"
        android:text="@string/WelcomeSignInText"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/UserName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/UserNameText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/PasswordText"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/ForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:onClick="forgetPassword"
            android:layout_gravity="right"
            android:text="@string/ForgetPasswordButton"
            android:textColor="@color/blue"
            android:fontFamily="@font/baloo_bhai"
            android:textSize="16sp" />

        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/blue"
            android:onClick="SignIn"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/signInText"
            android:fontFamily="@font/baloo_bhai"/>

        <Button
            android:id="@+id/new_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ic_launcher_background"
            android:onClick="newUser"
            android:text="@string/NewUserButtonText"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:textColor="@color/blue" />

    </LinearLayout>

</LinearLayout>